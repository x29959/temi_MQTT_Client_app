<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:orientation="vertical"
                                                   android:layout_height="match_parent"
                                                   android:background="#000000"
                                                   android:focusable="true"
                                                   android:focusableInTouchMode="true"
                                                   tools:context=".MainActivity">

    <Button
            android:id="@+id/button_connect"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="404dp"
            android:layout_marginEnd="160dp"
            android:onClick="onConnect"
            android:text="@string/button_connect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.515"
            android:textSize="34sp" android:fontFamily="serif"/>
    <EditText
            android:id="@+id/edit_text_host_name"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_marginTop="300dp"
            android:autofillHints="Enter MQTT host address"
            android:backgroundTint="#ff008577"
            android:ems="10"
            android:inputType="textUri"
            android:text="@string/hostname"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.511"
            android:visibility="visible" android:textSize="34sp" android:fontFamily="@font/ubuntu_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>